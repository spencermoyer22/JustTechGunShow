{{!-- use partial to pull data from post-info.hbs post --}}
{{> post-info post}}

{{#if loggedIn}}
{{!-- display form for adding new, and listing current, comments --}}
<form class="comment-form">
  <div>
    <textarea name="comment-body" cols="50" rows="7"></textarea>
  </div>

  <div>
    <button type="submit" class="btn comment-form-btn">add new comment</button>
  </div>
</form>
{{/if}}

{{!-- import partial for comments --}}
{{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/category.js"></script>
{{/if}}