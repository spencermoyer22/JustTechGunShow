<div class='card w-100 mb-3'>
  <div class='card-header'>
    {{title}}
  </div>
  <div class='p-3'>
    <p class='card-text'>
      {{contents}}
    </p>
    <p>Created by
      {{user.username}}
      on
      {{format_date created_at}}
      |
      <a href="/post/{{id}}">{{comments.length}}
        {{format_plural "comment" comments.length}}</a>
      <br />
      <a href="/dashboard/edit/{{id}}" class="edit-link">Edit this post</a></p>
    </div>
</div>