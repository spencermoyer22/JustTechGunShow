<div class='container pb-4'>
    <div class='row'>
        <div class='col-xl-6'>
            {{!-- form to create new post --}}
            <h2 style='text-align: center'>Create New Post</h2>
            <section>
                <form class="new-post-form">
                    <div class="pb-3">
                        <label for="post-title" class='d-block'>Title</label>
                        <input type="text" id="post-title" name="post-title" style='width: 75%;'/>
                    </div>
                    <div class="pb-3">
                        <label for="post-text" class='d-block'>Write</label>
                        <textarea id="post-text" name="post-text" style='width: 75%;' cols="50" rows="7"></textarea>
                    </div>
                    <button class='btn' type="submit">Create Post</button>
                </form>
            </section>
        </div>
        <div class="col-xl-6 col-lg-9">
            {{!-- if user has posts, display posts with option to edit --}}
            {{#if posts.length}}
            <section class='mb-5'>
                <h2 style='text-align: center'>Your Posts</h2>
                <ul style='list-style-type: none'>
                    {{#each posts as |post|}}
                    {{!-- <li> --}}
                        {{> post-info post}}
                    {{!-- </li> --}}
                    {{/each}}
                </ul>
            </section>
            {{/if}}
        </div>
    </div>

</div>

