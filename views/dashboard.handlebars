{{!-- form to create new post --}}
<section class="pb-3">
    <h2>Create New Workout Post</h2>

    <form class="new-post-form">
        <div class="pb-3">
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div class="pb-3">
            <label for="post-text">Describe your workout</label>
            <input id="post-text" name="post-text" />
        </div>
        <button type="submit">Create Workout Post</button>
    </form>
</section>

{{!-- if user has posts, display posts with option to edit --}}
{{#if posts.length}}
<section class='mb-5'>
    <h2>Your Workout Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

